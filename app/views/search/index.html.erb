<!--start-breadcrumbs-->
<div class="breadcrumb">
  <div class="container">
    <div class="breadcrumbs-main">
     <ol class="breadcrumb">
       <li><a href="/"> <%= render_breadcrumbs %></a> </li>
       <li>Search by request</li>
     </ol>
    </div>
  </div>
</div>
<!--end-breadcrumbs-->
<!--prdt-breadcrumbs-->
<div class="prdt">
  <div class="container">
    <div class="prdt-top">
      <div class="col-md-9 prdt-left">
        <% if @products %>
          <div class="product-one">
            <% @products.each do |product| %>
              <div class="col-md-4 product-left p-left">
                <div class="product-main simpleCart_shelfItem">
                  <a href="/product/<%=product.id %>" class="mask">
                  <%= image_tag(product.img, alt: "", class: "img-responsive zoom-img") %>
                  </a>
                  <div class="product-bottom">
                    <h3><%= product.title %></h3>
                    <h4>
                      <a data-id="<%=product.id %>" class="add-to-cart-link" href="cart/add?id=<%=product.id %>"><i></i></a>
                      <span class=" item_price"><%=number_to_currency(product.price) %></span>
                      <% if product.old_price %>
                        <small><del><%= number_to_currency(product.old_price) %></del></small>
                      <% end %>
                    </h4>
                  </div>
                  <div class="srch srch1">
                    <span>-50%</span>
                  </div>
                </div>
              </div>
            <% end %>
            <div class="clearfix"></div>
          </div>
        <% else %>
          <h3>Nothing to show</h3>
        <% end %>
      </div>
      <div class="col-md-3 prdt-right">
        <div class="w_sidebar">
          <section class="sky-form">
            <h4>Countries</h4>
            <div class="row1 scroll-pane">
              <div class="col col-4">
              <label class="checkbox"><input type="checkbox" name="checkbox" checked=""><i></i>All Country</label>
            </div>
            <div class="col col-4">
              <label class="checkbox"><input type="checkbox" name="checkbox"><i></i>China</label>
              <label class="checkbox"><input type="checkbox" name="checkbox"><i></i>USA</label>
              <label class="checkbox"><input type="checkbox" name="checkbox"><i></i>Russia</label>
            </div>
            </div>
          </section>
          <section class="sky-form">
            <h4>Brand</h4>
            <div class="row1 row2 scroll-pane">
              <div class="col col-4">
                <label class="checkbox"><input type="checkbox" name="checkbox" checked=""><i></i>Apple</label>
              </div>
              <div class="col col-4">
                <label class="checkbox"><input type="checkbox" name="checkbox"><i></i>Xiaomi</label>
                <label class="checkbox"><input type="checkbox" name="checkbox"><i></i>Huawei</label>
                <label class="checkbox"><input type="checkbox" name="checkbox"><i></i>ZTE</label>
                <label class="checkbox"><input type="checkbox" name="checkbox"><i></i>BlackBerry</label>
                <label class="checkbox"><input type="checkbox" name="checkbox"><i></i>Motorolla</label>
                <label class="checkbox"><input type="checkbox" name="checkbox"><i></i>TeXet</label>
                <label class="checkbox"><input type="checkbox" name="checkbox"><i></i>YotaPhone</label>
                <label class="checkbox"><input type="checkbox" name="checkbox"><i></i>Highscreen</label>
              </div>
            </div>
          </section>
        </div>
      </div>
      <div class="clearfix"></div>
    </div>
  </div>
</div>
<input type="hidden" value="<%= !current_user.nil? ? 88 : 99 %>" id="cart_access" />
